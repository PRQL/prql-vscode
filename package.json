{
  "name": "prql-vscode",
  "displayName": "PRQL",
  "description": "PRQL is a modern language for transforming data â€” a simple, powerful, pipelined SQL replacement",
  "repository": {
    "url": "https://github.com/prql/prql-vscode.git"
  },
  "publisher": "prql-lang",
  "version": "0.4.2",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "source": "src/extension.ts",
  "main": "out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "prql",
        "aliases": [
          "PRQL",
          "prql"
        ],
        "extensions": [
          ".prql"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./resources/prql-logo.png",
          "light": "./resources/prql-logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "prql",
        "scopeName": "source.prql",
        "path": "./syntaxes/prql.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "prql.openSqlPreview",
        "title": "Open SQL Preview",
        "category": "PRQL",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceFilename =~ /.*(.prql)/",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceFilename =~ /.*\\.(prql)/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "eslint --max-warnings 0 . && tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "dependencies": {
    "@types/vscode": "^1.75.0",
    "prql-js": "^0.4.2",
    "shiki": "^0.14.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "typescript": "^4.9.5"
  },
  "icon": "resources/prql-logo.png"
}
