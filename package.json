{
  "name": "prql-vscode",
  "displayName": "PRQL",
  "description": "PRQL is a modern language for transforming data â€” a simple, powerful, pipelined SQL replacement",
  "repository": {
    "url": "https://github.com/prql/prql-vscode.git"
  },
  "publisher": "prql-lang",
  "version": "0.13.0",
  "icon": "resources/prql-logo.png",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Data Science",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "data tools",
    "sql tools"
  ],
  "source": "src/extension.ts",
  "main": "out/extension.js",
  "activationEvents": [
    "onLanguage:prql",
    "onWebviewPanel:prql.sqlPreviewPanel",
    "onCommand:prql.openSqlPreview",
    "onCommand:prql.generateSqlFile",
    "onCommand:prql.copySqlToClipboard",
    "onCommand:prql.viewSettings"
  ],
  "contributes": {
    "languages": [
      {
        "id": "prql",
        "aliases": [
          "PRQL",
          "prql"
        ],
        "extensions": [
          ".prql"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./resources/prql-logo.png",
          "light": "./resources/prql-logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "prql",
        "scopeName": "source.prql",
        "path": "./syntaxes/prql.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.jsx",
          "source.ts",
          "source.tsx"
        ],
        "scopeName": "inline.prql",
        "path": "./syntaxes/inline-prql.json",
        "embeddedLanguages": {
          "meta.embedded.block.prql": "prql"
        }
      }
    ],
    "commands": [
      {
        "command": "prql.openSqlPreview",
        "title": "Open SQL Preview",
        "category": "PRQL",
        "icon": "$(open-preview)"
      },
      {
        "command": "prql.generateSqlFile",
        "title": "Generate SQL File",
        "category": "PRQL",
        "icon": "$(database)"
      },
      {
        "command": "prql.copySqlToClipboard",
        "title": "Copy SQL to Clipboard",
        "category": "PRQL",
        "icon": "$(copy)"
      },
      {
        "command": "prql.viewSettings",
        "title": "View PRQL Settings",
        "category": "PRQL",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceLangId == prql",
          "group": "prql"
        },
        {
          "command": "prql.generateSqlFile",
          "when": "resourceLangId == prql",
          "group": "prql"
        }
      ],
      "editor/title": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceLangId == prql",
          "group": "navigation"
        },
        {
          "command": "prql.generateSqlFile",
          "when": "resourceLangId == prql",
          "group": "navigation"
        },
        {
          "command": "prql.viewSettings",
          "when": "resourceLangId == prql",
          "group": "navigation"
        },
        {
          "command": "prql.copySqlToClipboard",
          "when": "prql.sqlPreviewActive || resourceLangId == prql",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceLangId == prql",
          "group": "prql"
        },
        {
          "command": "prql.generateSqlFile",
          "when": "resourceLangId == prql",
          "group": "prql"
        },
        {
          "command": "prql.viewSettings",
          "when": "resourceLangId == prql",
          "group": "prql"
        },
        {
          "command": "prql.copySqlToClipboard",
          "when": "prql.sqlPreviewActive || resourceLangId == prql",
          "group": "prql"
        }
      ]
    },
    "configuration": {
      "title": "PRQL",
      "type": "object",
      "properties": {
        "prql.target": {
          "type": "string",
          "enum": [
            "Ansi",
            "BigQuery",
            "ClickHouse",
            "DuckDb",
            "Generic",
            "MsSql",
            "MySql",
            "Postgres",
            "SQLite",
            "Snowflake",
            "Any"
          ],
          "default": "Generic",
          "order": 0,
          "description": "PRQL compiler target dialect to use when generating SQL from pipeline definition files."
        },
        "prql.addCompilerSignatureComment": {
          "type": "boolean",
          "default": true,
          "order": 1,
          "description": "Add PRQL compiler signature comment with SQL target dialect and compiler version to generated SQL."
        },
        "prql.addTargetDialectToSqlFilenames": {
          "type": "boolean",
          "default": false,
          "order": 2,
          "description": "Add target dialect suffix to the generated SQL filenames."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "eslint --max-warnings 0 . && tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/vscode": "^1.96.0",
    "prqlc": "^0.13.2",
    "shiki": "^0.14.7"
  }
}
