{
  "name": "prql-vscode",
  "displayName": "PRQL",
  "description": "PRQL is a modern language for transforming data â€” a simple, powerful, pipelined SQL replacement",
  "repository": {
    "url": "https://github.com/prql/prql-vscode.git"
  },
  "publisher": "prql-lang",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Data Science",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "data tools",
    "sql tools"
  ],
  "source": "src/extension.ts",
  "main": "out/extension.js",
  "activationEvents": [
    "onLanguage:prql",
    "onCommand:prql.openSqlPreview",
    "onCommand:prql.generateSqlFile",
    "onCommand:prql.copySqlToClipboard"
  ],
  "contributes": {
    "languages": [
      {
        "id": "prql",
        "aliases": [
          "PRQL",
          "prql"
        ],
        "extensions": [
          ".prql"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./resources/prql-logo.png",
          "light": "./resources/prql-logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "prql",
        "scopeName": "source.prql",
        "path": "./syntaxes/prql.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "prql.openSqlPreview",
        "title": "Open SQL Preview",
        "category": "PRQL",
        "icon": "$(open-preview)"
      },
      {
        "command": "prql.generateSqlFile",
        "title": "Generate SQL File",
        "category": "PRQL",
        "icon": "$(database)"
      },
      {
        "command": "prql.copySqlToClipboard",
        "title": "Copy SQL to Clipboard",
        "category": "PRQL",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceFilename =~ /\\.prql$/",
          "group": "navigation"
        },
        {
          "command": "prql.generateSqlFile",
          "when": "resourceFilename =~ /\\.prql$/",
          "group": "navigation"
        },
        {
          "command": "prql.copySqlToClipboard",
          "when": "prql.sqlPreviewActive",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "prql.openSqlPreview",
          "when": "resourceFilename =~ /\\.prql$/",
          "group": "navigation"
        },
        {
          "command": "prql.generateSqlFile",
          "when": "resourceFilename =~ /\\.prql$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "PRQL",
      "type": "object",
      "properties": {
        "prql.target": {
          "type": "string",
          "enum": [
            "Ansi",
            "BigQuery",
            "ClickHouse",
            "DuckDb",
            "Generic",
            "Hive",
            "MsSql",
            "MySql",
            "Postgres",
            "SQLite",
            "Snowflake"
          ],
          "default": "Ansi",
          "description": "PRQL compiler target dialect to use by default when generating SQL from pipeline definition files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "eslint --max-warnings 0 . && tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "dependencies": {
    "@types/vscode": "^1.75.0",
    "prql-js": "^0.5.0",
    "shiki": "^0.14.1"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "typescript": "^4.9.5"
  },
  "icon": "resources/prql-logo.png"
}
